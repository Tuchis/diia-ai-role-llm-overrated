# AWS Configuration
# IMPORTANT: For production, use IAM roles instead of access keys
# Only use these if you cannot attach an IAM role to your EC2 instance
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_SESSION_TOKEN=your_aws_session_token  # Only if using temporary credentials
AWS_REGION=eu-central-1

# S3 Configuration
S3_BUCKET_NAME=your_production_s3_bucket

# DynamoDB Configuration
DYNAMODB_USERS_TABLE=diia_hack_users
DYNAMODB_REQUESTS_TABLE=diia_hack_requests

# Google OAuth 2.0
# Remember to add your production domain to Google OAuth settings
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Production Environment
ENVIRONMENT=production

# Frontend URL (update with your actual domain or EC2 public IP)
FRONTEND_URL=http://YOUR_EC2_PUBLIC_IP
# Or with domain: FRONTEND_URL=https://yourdomain.com

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://YOUR_EC2_PUBLIC_IP,https://yourdomain.com
